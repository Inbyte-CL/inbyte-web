---
// layout
import BaseLayout from "@/layouts/BaseLayout.astro";

// components
import HeroSideImage from "@/components/hero/HeroSideImage.astro";
import HeroCenterImage from "@/components/hero/HeroCenterImage.astro";
import HeroCenterDashboard from "@/components/hero/HeroCenterDashboard.astro";
import { Image } from "astro:assets";
import DashVend from "@/data/Parking/dashvend.png";

import LogoCloudMarquee from "@/components/logo-cloud/LogoCloudMarquee.astro";
import LogoCloudStatic from "@/components/logo-cloud/LogoCloudStatic.astro";
import LogoCloudStaticSimple from "@/components/logo-cloud/LogoCloudStaticSimple.astro";

import FeatureSideImage from "@/components/feature/FeatureSideImage.astro";
import FeatureSideImageWide from "@/components/feature/FeatureSideImageWide.astro";
import FeatureNumbers from "@/components/feature/FeatureNumbers.astro";
import FeatureExpand from "@/components/feature/FeatureExpand.astro";
import FeatureToggle from "@/components/feature/FeatureToggle.astro";
import FeatureTiltCards from "@/components/feature/FeatureTiltCards.astro";
import QueHacemos from "@/components/feature/QueHacemos.astro";

import PricingThreeCards from "@/components/pricing/PricingThreeCards.astro";
import PricingTable from "@/components/pricing/PricingTable.astro";
import PricingTwoCards from "@/components/pricing/PricingTwoCards.astro";
import PricingTwoCardsSimple from "@/components/pricing/PricingTwoCardsSimple.astro";

import TestimonialSwiper from "@/components/testimonials/TestimonialSwiper.astro";
import TestimonialsExpand from "@/components/testimonials/TestimonialsExpand.astro";

import FaqAccordions from "@/components/faq/FaqAccordions.astro";
import FaqAccordionsPlain from "@/components/faq/FaqAccordionsPlain.astro";

import CtaCentered from "@/components/cta/CtaCentered.astro";
import CtaNewsletter from "@/components/cta/CtaNewsletter.astro";
import CtaCenteredNewsletter from "@/components/cta/CtaCenteredNewsletter.astro";

// utils
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData } from "@/js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<BaseLayout title={siteData.title} description={siteData.description}>
	<!-- <HeroSideImage /> -->
	<!-- <HeroCenterImage /> -->
	<HeroCenterDashboard />

	<!-- <FeatureSideImageWide /> -->
	<!-- <FeatureNumbers /> -->
	<FeatureSideImage />

	<!-- Dashboard Image Section -->
	<section class="overflow-hidden pt-8 pb-12">
		<div class="site-container">
			<div class="w-full max-w-6xl mx-auto">
				<div class="mb-12 text-center">
					<h2 class="h2 mb-6">Somos Diferentes</h2>
					<p class="mx-auto max-w-2xl text-lg opacity-80">
						Inbyte es la única empresa en Chile que entrega dashboards y análisis de datos 100% personalizados para cada cliente, optimizando la gestión de máquinas expendedoras, sistemas de autoservicio y operaciones de vending con información en tiempo real.
					</p>
				</div>
				<div class="mx-auto max-w-max">
					<Image
						class="tilt-card rounded-3xl"
						src={DashVend}
						alt="INBYTE Dashboard"
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Qué hacemos Section -->
	<QueHacemos />
</BaseLayout>
