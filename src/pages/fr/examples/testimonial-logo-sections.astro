<BaseLayout
	title="testimonial and logo sections"
	description="All Testimonial and Logo sections you get with the Zenith theme by Cosmic Themes."
>
	<div class="site-container my-28 flex justify-center">
		<h1 class="h1">All Testimonial and Logo Cloud Sections</h1>
	</div>
	<LogoCloudStatic />
	<TestimonialsExpand />
	<LogoCloudMarquee />
	<TestimonialSwiper />
