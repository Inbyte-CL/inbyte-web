---
import BaseLayout from "@/layouts/BaseLayout.astro";
import InbyteContactForm from "@/components/forms/InbyteContactForm.astro";
---

<BaseLayout
	title="Contact"
	description="Contactez-nous pour toute question sur nos systèmes de paiement pour distributeurs automatiques."
>
	<!-- Hero Section -->
	<section id="contact-hero" class="-mt-23 overflow-hidden pt-23">
		<div class="relative pt-20 pb-4">
			<div class="site-container relative mx-auto px-4">
				<div class="flex flex-col items-center">
					<div class="relative z-10 mb-4 text-center">
						<div data-aos="fade-up" data-aos-trigger="#contact-hero">
							<h1
								class="font-heading xl:text-10xl mx-auto mb-4 max-w-4xl text-7xl tracking-tighter lg:text-8xl"
							>
								Contact
							</h1>
						</div>
						<p
							class="mx-auto mb-4 max-w-2xl text-lg opacity-80"
							data-aos="fade-up"
							data-aos-trigger="#contact-hero"
							data-aos-delay=".15"
						>
							Remplissez le formulaire et nous vous contacterons pour vous aider à moderniser votre opération de vending et libre-service.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form Section -->
	<section id="contact-form-section" class="py-16 md:py-24">
		<div class="site-container">
			<div class="mx-auto max-w-3xl">
				<div
					class="bg-gradient-radial-dark rounded-5xl border-border/30 relative overflow-hidden border p-8 md:p-12"
					data-aos="fade-up"
					data-aos-trigger="#contact-form-section"
				>
					<div class="relative z-10">
						<InbyteContactForm />
					</div>
					{/* corner glow */}
					<div class="to-primary dark:to-blueGray-500 absolute right-0 bottom-0 size-44 bg-gradient-to-br from-transparent via-transparent blur-lg opacity-50" />
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
